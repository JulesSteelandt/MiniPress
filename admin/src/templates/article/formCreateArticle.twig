{% extends 'layout.twig' %}

{% block content %}
    <h1>Créer un article</h1>
    <form class="form" action="{{ url_for('CreateArticle') }}" method="post" >
        <label for="titre">titre</label>
        <input type="text" name="titre" id="titre" required>
        <label for="resume">resume</label>
        <input type="text" name="resume" id="resume" required>
        <label for="contenu">contenu</label>
        <textarea type="text" name="contenu" id="contenu" required></textarea>
        <label for="categorie">Categorie</label>
        <select name="categorie" id="categorie" required>
            <option value="">--Categorie--</option>
            <option value="1">Sport</option>
            <option value="2">Jeux vidéo</option>
            <option value="3">Divertissement</option>
        </select>
        <input type="hidden" name="csrf" value="{{ csrf }}">
        <input type="submit" value="Créer" class="submit">
    </form>
{% endblock %}