{% extends 'layout.twig' %}

{% block content %}
    {% if userLog %}
        <h1>Liste de vos articles</h1>
        <ul>
            {% for article in articles %}
                <li>{{ article.titre }} : {{ article.date_creation }}
                    <form class="form" action="{{ url_for('publierAction') }}" method="post">
                        {% if article.date_publication == null %}
                            <button type="submit" name="publication" value="{{ article.id }}">publier</button>
                        {% else %}
                            <button type="submit" name="publication" value="{{ article.id }}">dépublier</button>
                        {% endif %}
                        <input type="hidden" name="csrf" value="{{ csrf }}">
                    </form>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <h1> Vous n'êtes pas connecté </h1>
    {% endif %}

{% endblock %}